{% block "include" %}
<script type="text/javascript">
  function modalPreparation(caller){
  var deleteUrl = $(caller).attr("data-url");
  var usName = $(caller).attr("data-name");
  $("#modalLink").attr("href", deleteUrl);
  $("#modalName").text(usName);
  }
</script>
{% endblock "include" %}

