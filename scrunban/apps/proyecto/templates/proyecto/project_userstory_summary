{% extends "proyecto/project_base" %}

{% block "include" %}
<script>
    $(document).ready(function(){

        $(".aprobar").click(function () {
           note_id = $(this).prop('id');

           $("#nota_id").html(note_id);

           $("#seguroModal").modal({
                show: true
           });
        });

        $("#seguro").click(function(){
            note_id = $("#nota_id").html();
            $("#id_note_id").val(note_id);
            $("#form").submit();
        });
    });
</script>
{% endblock %}

